{
    "name": "kubernetes",
    "displayName": "vscode-kubernetes",
    "description": "Run kinds of kubernetes commands in vscode smoothly.",
    "version": "0.0.1",
    "publisher": "SummerSun",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:kubernetes.viewDeployment"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "kubernetes.viewDeployment",
                "title": "View the Deployment",
                "category": "Kubernetes"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
